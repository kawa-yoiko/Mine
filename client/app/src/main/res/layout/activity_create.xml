<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background_grey"
                android:text="返回"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/back_button"
                ></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background_yellow"
                android:textColor="#FDFDFD"
                android:text="发布"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:id="@+id/post_button"
                android:layout_alignParentRight="true"
                ></Button>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_area"
            ></FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:id="@+id/add_collection"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/book_icon"
                android:src="@drawable/flower"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/book_icon"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:text="存入合集"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/add_tag"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/tag_icon"
                android:src="@drawable/flower"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tag_icon"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:text="添加标签"></TextView>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

