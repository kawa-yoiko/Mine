<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_0"
    >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/grey_1"
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帐号设置"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_4"
                android:id="@+id/title"></TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_grey_light"
        android:dividerPadding="10dp"
        android:showDividers="middle"
        tools:ignore="MissingConstraints"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:id="@+id/set_avatar"
            >
            <view
                android:layout_width="50dp"
                android:layout_height="50dp"
                class="com.example.mine.WidthEqualsHeightImageView"
                android:src="@drawable/luoxiaohei"
                android:id="@+id/avatar"
                android:scaleType="centerCrop"></view>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑头像"
                android:textSize="16dp"
                android:background="#00FFFFFF"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:paddingVertical="10dp"
                ></Button>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/grey_0">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nickname_text"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text="用户名"></TextView>

            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="#00FFFFFF"
                android:text="kuriko"
                android:textSize="16dp"></EditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password_text"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text="密码"></TextView>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="#00FFFFFF"
                android:inputType="textPassword"
                android:hint="若不修改则留空"
                android:text=""
                android:textSize="16dp"></EditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            >
            <EditText
                android:id="@+id/password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="#00FFFFFF"
                android:inputType="textPassword"
                android:hint="重复输入一次"
                android:text=""
                android:textSize="16dp"></EditText>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/introduction_text"
                android:textSize="16dp"

                android:text="简介"></TextView>

            <EditText
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="#00FFFFFF"
                android:gravity="top"
                android:minHeight="100dp"
                android:text="我爱吃栗子红红火火"
                android:textSize="16dp"></EditText>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        app:layout_constraintTop_toBottomOf="@id/edit_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/bt_background_yellow"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingVertical="8dp"
        android:text="保存"
        android:textColor="#FDFDFD"
        android:textSize="16dp"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>