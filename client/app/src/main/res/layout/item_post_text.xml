<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="5"
                android:layout_marginRight="50px"
                android:text="粥粥可爱"
                android:id="@+id/collection"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/bound"></TextView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tag"
                    android:text="#猫猫 #狗粮 #摄影 #1234567891234"
                    android:textSize="16dp"></TextView>
            </HorizontalScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/avatar"
                android:src="@drawable/flower"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="kuriko"
                android:id="@+id/nickname"
                android:textSize="16dp"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:text="15分钟前"
                android:id="@+id/timestamp"
                ></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="粥粥与草莓"
            app:layout_constraintLeft_toLeftOf="@id/avatar"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:id="@+id/caption"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/avatar"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:textSize="15dp"
            android:id="@+id/content"
            android:text="blablablablablablablablablablablabalalb
            alblablablablablablablablablablablabalalbalblablablablablablablablablablablabalalbal"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="400px"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                app:layout_constraintBaseline_toBaselineOf="@id/flower_num"
                android:id="@+id/flower_icon"
                android:src="@drawable/flower"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100"
                android:id="@+id/flower_num"
                app:layout_constraintBaseline_toBaselineOf="@id/comment_icon"
                ></TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/comment_icon"
                app:layout_constraintBaseline_toBaselineOf="@id/comment_num"
                android:src="@drawable/comment"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100"
                android:id="@+id/comment_num"
                app:layout_constraintBaseline_toBaselineOf="@id/star_icon"
                ></TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/star_icon"
                app:layout_constraintBaseline_toBaselineOf="@id/star_num"
                android:src="@drawable/star"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100"
                android:id="@+id/star_num"
                app:layout_constraintBaseline_toBaselineOf="@id/flower_icon"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>