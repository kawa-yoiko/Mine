<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <view
        class="com.example.mine.WidthEqualsHeightFrameLayoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/square_text"
        android:background="@drawable/corner_square"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/caption"
                android:layout_marginBottom="3dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="all the beautiful things shining all around us,
                all the beautiful things shining all around us"
                android:layout_below="@+id/caption"
                android:id="@+id/content"
                >
            </TextView>
        </RelativeLayout>
    </view>
</androidx.constraintlayout.widget.ConstraintLayout>