<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/after_tag_serach"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/head_view">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/flower"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:id="@+id/tag_icon"
                android:textColor="@color/grey_4"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五条悟"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/tag_icon"
                android:layout_marginRight="10dp"
                android:textColor="@color/grey_4"
                android:id="@+id/tag"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/tag_num"
                android:text="10万"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="参与"></TextView>
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/themeyellow"
            app:tabTextAppearance="@style/Navigation"
            android:id="@+id/tab"
            tools:ignore="MissingConstraints">
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新"
                ></com.google.android.material.tabs.TabItem>
            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最热"></com.google.android.material.tabs.TabItem>
        </com.google.android.material.tabs.TabLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@color/grey_1"
            android:padding="5dp"
            android:id="@+id/hot_selector"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background_grey1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="日榜"
                android:id="@+id/day_hot"
                android:layout_marginHorizontal="12dp"
                android:paddingHorizontal="12dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:paddingVertical="6dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background_grey"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="月榜"
                android:id="@+id/month_hot"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="12dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:paddingVertical="6dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background_grey"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="季榜"
                android:id="@+id/semester_hot"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="12dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:paddingVertical="6dp"></Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_background_grey"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="总榜"
                android:id="@+id/total_hot"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="12dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:paddingVertical="6dp"></Button>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>